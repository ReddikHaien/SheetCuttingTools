{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "plugins": [
          "@semantic-release/commit-analyzer",
          "@semantic-release/git",
          "@semantic-release/changelog",
          [
            "@semantic-release/github",
            {
              "assets":[
                {
                  "path": "../../build-output.zip",
                  "name": "SheetCuttingTools.Grasshopper-net7.zip",
                  "label": "SheetCuttingTools.Grasshopper-net7.zip"
                },
                {
                  "path": "../../build-output.tar",
                  "name": "SheetCuttingTools.Grasshopper-net7.tar",
                  "label": "SheetCuttingTools.Grasshopper-net7.tar"
                }
              ] 
            }
          ],
          [
            "@semantic-release/exec",
            {
              "verifyCmd": "(cd ../../ && ./verify-proj.sh src/SheetCuttingTools.Grasshopper)",
              "prepareCmd": "(cd ../../ && ./publish-proj.sh ${nextRelease.version} src/SheetCuttingTools.Grasshopper ./publish)"
            }
          ]
  ]
}
